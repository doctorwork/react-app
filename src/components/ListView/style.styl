.ListView{
    overflow: hidden;
    -webkit-transform: translate3d(0,0,0);

    ul{
        -webkit-transform: translate3d(0,0,0);
    }

    &-PullUp, &-PullDown{
        width: 100%;
        height: 50px;
        font-size: 24px;
        text-align: center;
        line-height: 50px;
    }

    &-PullDown{
        position: absolute;
        top: -50px;
    }
}